{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noLib": false,
        "outDir": "dist/",
        "lib":[
            "es2015",
            "dom",
            "es5"
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "jspm_packages"
    ]
}